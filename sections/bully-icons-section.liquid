{% schema %}
{
  "name": "bully-icons-section",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "bully-icons-section"
    }
  ]
}
{% endschema %}

<style>
  .bully-icons-section {
    background-color: #f6f6f6;
    padding: 4rem 1rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .bully-icons-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
    background: white;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
  }

  .bully-icon-block img {
    height: 60px;
    margin-bottom: 1rem;
  }

  .bully-icon-block h4 {
    font-size: 1rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }

  .bully-icon-block p {
    font-size: 0.9rem;
    color: #333;
    line-height: 1.5;
  }

  @media (min-width: 640px) {
    .bully-icons-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .bully-icons-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<section class="bully-icons-section">
  <div class="bully-icons-grid">
    <div class="bully-icon-block">
      <img src="https://cdn-icons-png.flaticon.com/512/1598/1598431.png" alt="Natural beef icon">
      <h4>All Natural</h4>
      <p>Made from real beef, free from additives & preservatives.</p>
    </div>
    <div class="bully-icon-block">
      <img src="https://cdn-icons-png.flaticon.com/512/197/197484.png" alt="USA flag icon">
      <h4>Made in the USA</h4>
      <p>Complies with USDA, FDA, CHIA, and SQF safety standards.</p>
    </div>
    <div class="bully-icon-block">
      <img src="https://cdn-icons-png.flaticon.com/512/5628/5628351.png" alt="Delivery van icon">
      <h4>Quick & Easy Delivery</h4>
      <p>Free domestic shipping to all corners of the USA.</p>
    </div>
    <div class="bully-icon-block">
      <img src="https://cdn-icons-png.flaticon.com/512/1828/1828640.png" alt="Checkmark in shield icon">
      <h4>Our Customers Come First</h4>
      <p>30 day 100% Money Back Guarantee on all purchases!</p>
    </div>
  </div>
</section>
