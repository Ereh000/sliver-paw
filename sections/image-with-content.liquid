<div class="image-with-content" id="image-with-content-{{ section.id }}">
  <div class="page-width">
    <div class="section-header">
      <div class="left">
        {% if section.settings.heading != blank %}
          <h2 class="image-with-content__heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <div class="image-with-content__subheading">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>
      <div class="right">
        {% if section.settings.button_label != blank %}
          <div class="image-with-content__button-wrapper">
            <a href="{{ section.settings.button_link }}" class="image-with-content__button">
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="image-with-content__container">
      <div class="image-with-content__text-column">
        <div class="image-with-content__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="image-with-content__feature" {{ block.shopify_attributes }}>
                <div class="image-with-content__feature-icon">
                  <svg viewBox="0 0 24 24" width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12L10 17L20 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <div class="image-with-content__feature-content">
                  <h3 class="image-with-content__feature-title">{{ block.settings.title }}</h3>
                  <div class="image-with-content__feature-text">{{ block.settings.text }}</div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="image-with-content__image-column">
        <div class="image-with-content__image-wrapper">
          {% if section.settings.image != blank %}
            <img
              srcset="
                {% if section.settings.image.width >= 375 %}{{ section.settings.image | img_url: '375x' }} 375w,{% endif %}
                {% if section.settings.image.width >= 550 %}{{ section.settings.image | img_url: '550x' }} 550w,{% endif %}
                {% if section.settings.image.width >= 750 %}{{ section.settings.image | img_url: '750x' }} 750w,{% endif %}
                {% if section.settings.image.width >= 1100 %}{{ section.settings.image | img_url: '1100x' }} 1100w,{% endif %}
                {{ section.settings.image | img_url: 'master' }} {{ section.settings.image.width }}w
              "
              src="{{ section.settings.image | img_url: '550x' }}"
              sizes="(min-width: 750px) 50vw, 100vw"
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="image-with-content__image"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}

          {% if section.settings.show_circle_background %}
            <div class="image-with-content__circle-background"></div>
          {% endif %}

