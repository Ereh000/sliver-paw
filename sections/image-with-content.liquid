<style>
    #image-with-content-{{ section.id }} {
      padding: 60px 0;
      background-color: {{ section.settings.background_color }};
      position: relative;
      overflow: hidden;
    }

    .image-with-content__container {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 40px;
    }

    .image-with-content__text-column {
      flex: 1;
      min-width: 300px;
    }

    .image-with-content__image-column {
      flex: 1;
      min-width: 300px;
      display: flex;
      justify-content: center;
    }

    .image-with-content__heading {
      font-size: {{ section.settings.heading_size }}px;
      line-height: 1.2;
      margin: 0 0 15px;
      color: {{ section.settings.heading_color }};
      font-weight: 700;
    }

    .image-with-content__subheading {
      font-size: {{ section.settings.subheading_size }}px;
      line-height: 1.5;
      margin-bottom: 30px;
      color: {{ section.settings.text_color }};
    }

    .image-with-content__features {
      margin-bottom: 30px;
    }

    .image-with-content__feature {
      display: flex;
      align-items: flex-start;
      margin-bottom: 20px;
    }

    .image-with-content__feature-icon {
      flex-shrink: 0;
      width: 24px;
      height: 24px;
      margin-right: 15px;
      color: {{ section.settings.accent_color }};
    }

    .image-with-content__feature-title {
      font-size: 18px;
      font-weight: 600;
      margin: 0 0 5px;
      color: {{ section.settings.heading_color }};
    }

    .image-with-content__feature-text {
      font-size: 16px;
      line-height: 1.5;
      color: {{ section.settings.text_color }};
    }

    .image-with-content__button-wrapper {
      margin-top: 30px;
    }

    .image-with-content__button {
      display: inline-block;
      padding: 12px 24px;
      background-color: {{ section.settings.button_background }};
      color: {{ section.settings.button_text_color }};
      font-weight: 600;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .image-with-content__button:hover {
      background-color: {{ section.settings.button_background_hover }};
      transform: translateY(-2px);
    }

    .image-with-content__image-wrapper {
      position: relative;
      width: 100%;
      max-width: 450px;
    }

    .image-with-content__image {
      display: block;
      width: 100%;
      height: auto;
      position: relative;
      z-index: 2;
      border-radius: 8px;
    }

    .image-with-content__circle-background {
      position: absolute;
      width: 80%;
      height: 80%;
      background-color: {{ section.settings.circle_background_color }};
      border-radius: 50%;
      top: 10%;
      left: 10%;
      z-index: 1;
    }

    .image-with-content__paw-icons {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 3;
      pointer-events: none;
    }

    .paw-icon {
      position: absolute;
      color: {{ section.settings.paw_icon_color }};
      opacity: 0.5;
    }

    .paw-icon--1 {
      top: 15%;
      right: 10%;
    }

    .paw-icon--2 {
      top: 40%;
      left: 5%;
    }

    .paw-icon--3 {
      bottom: 30%;
      right: 15%;
    }

    .paw-icon--4 {
      bottom: 10%;
      left: 20%;
    }

    @media screen and (max-width: 749px) {
      .image-with-content__container {
        flex-direction: column-reverse;
      }

      .image-with-content__text-column,
      .image-with-content__image-column {
        width: 100%;
      }

      .image-with-content__heading {
        font-size: {{ section.settings.heading_size | times: 0.8 }}px;
      }

      .image-with-content__subheading {
        font-size: {{ section.settings.subheading_size | times: 0.9 }}px;
      }
    }

    .section-header{
      display: flex;
      width: 100%;
      justify-content: space-between;
      align-items: baseline;
    }
</style>

